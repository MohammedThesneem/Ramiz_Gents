<div class='main-panel '>
		<div class='content-wrapper '>
			<div class="row">

				<a href="/admin/add-category" class="btn btn-success ml-auto mr-3 font-weight-bold">+Add Category</a>

			</div>
			
				<div class='row mt-3' >
					<div class='col-12 grid-margin'>
						<div class='card'>
							<div class='card-body'>
								<h4 class='card-title'>Order Status</h4>
								<div class='table-responsive'>
									<table class='table'>
										<thead>
											<tr>
											
												<th> No</th>
												
												<th>category</th>
												<th> Image </th>
												
											</tr>
										</thead>
										<tbody> 
											{{#each category}}
											<tr>
												
												
												<th scope="row">1</th>
												
												
												
												<td>{{this.category}}</td>
												
												<td><img style="width:50px;height:50px" src="/upload/{{this.image.filename}}"alt="">  </td>
												<td>
													<a
														href='/admin/edit-category/{{this._id}}'class='btn btn-outline-success'
													>Edit</a>
													<a
														href='/admin/delete-category/{{this._id}}'class='btn btn-outline-danger ml-2' onclick="return confirm('Are you want to delete{{this.category}} ?')"
													>delete</a>
											</tr>
											{{/each}}
	</div>
	
